{
  "manifest_version": 2,

  "name": "Boomerang price comparator",
  "description": "Boomerang extension to track product prices.",
  "version": "1.0",
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },
  "page_action": {
    "default_icon": "icon.png",
    "default_popup": "index.html"
  },
  "permissions": [
    "activeTab",
    "*://*/*"
  ]
}